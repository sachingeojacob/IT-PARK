<html>
    <head>
        <title>View users</title>

        <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">
    
        <!-- Custom styles for this template -->
        <link href="css/sb-admin-2.min.css" rel="stylesheet">
    
        <!-- Custom styles for this page -->
        <link href="vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

        

    </head>
    <body>
        <%- include('partials/navbar.ejs') %>


        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 font-weight-bold" align="center" style="color: rgb(41, 81, 194);">View Users</h1><br>
           

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">View Registered users</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>SN</th>
                                    <th>FirstName</th>
                                    <th>Username </th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>SN</th>
                                    <th>FirstName</th>
                                    <th>Username </th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                <% if(typeof(users)!='undefined'){ %>
                                    <% users.forEach(function(user,id){%>
                                        <tr>
                                            <td><%= id+1 %></td>
                                            <td><%= user.fname %></td>
                                            <td><%= user.username %></td>
                                            <td><%= user.email %></td>
                                            <td><%= user.mobileno %></td>
                                            <td><button class="btn btn-outline-success" id="someButton"><a href="https://mail.google.com/mail/u/0/#inbox?compose=new" target=”_blank”>
                                                <b>Connect</b></a>
                                              </button></td>
                                            
                                        </tr>

                                    <%})} %>
                                
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>                                                                      

        <!-- main page content ends -->
        <footer class="sticky-footer bg-white ">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy;IT Park 2020</span>
                </div>
            </div>
        </footer>

        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>

        <!-- Page level plugins -->
        <script src="vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="js/demo/datatables-demo.js"></script>


    </body>
</html>