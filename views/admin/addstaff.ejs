        <!-- main content -->
        <div class="sachin">
            <h1 align="center" style="font-weight: bold;"> ADD NEW STAFF</h1>
            <br>
            <br>
            <form action="/admin/addstaff" method="post" class="col-md-10" style="margin-left: 6em;">
                <div class="row padd">
                    <div class="mb-3 col-md-6">
                        <label for="productname" class="form-label">First Name</label>
                        <input type="text" pattern="[A-Za-z]{2,}"  title="Invalid Name" class="form-control" id="productname" name="fname" placeholder="Enter first Name"
                            required>
                    </div>
                    
                    <div class="mb-3 col-md-6">
                        <label for="productname" class="form-label">Last Name</label>
                        <input type="text" pattern="[A-Za-z]{1,}"  title="Invalid Name" class="form-control" id="productname" name="lname" placeholder="Enter last name"
                            required>
                    </div>


                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="productname" class="form-label">Email</label>
                        <input type="email" class="form-control" id="productname" name="email" placeholder="Enter e-mail id"
                            required>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="productname" class="form-label">Gender</label>
                        <!-- <select name="category" id="category" style="width: 446px;height: 35px;">
