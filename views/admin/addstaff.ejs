                            <div class="sac">
                          <input type="radio" name="gender" value="male" required> Male &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <input type="radio" name="gender" value="female" required> Female
                        </div>
                              




                        <!-- <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              choose category
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                              <a class="dropdown-item" href="#">Laptop</a>
                              <a class="dropdown-item" href="#">mouse</a>
                              <a class="dropdown-item" href="#">monitor</a>
                            </div>
                          </div> -->
                    </div>


                </div>


                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="productname" class="form-label">Mobile</label>
                        <input type="text" pattern="[0-9]{10}" title="Enter a Valid Mobile Number" class="form-control" id="price" name="mobile" placeholder="Enter mobile number"
                            required>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="productname" class="form-label">Zip Code</label>
                        <input type="text" pattern="[0-9]{6}" title="Enter a valid zipcode" class="form-control" id="price" name="zipcode" placeholder="Enter the zipcode"
                        required>
                    </div>


                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="productname" class="form-label">District</label>
                        <input type="text" pattern="[A-Za-z]{2,}"  title="Invalid District" class="form-control" id="productname" name="district" placeholder="Enter the district"
                            required>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="productname" class="form-label">State</label>
                        <input type="text" pattern="[A-Za-z]{2,}"  title="Invalid State" class="form-control" id="productname" name="state" placeholder="enter the state"
                            required>
                    </div>


                </div>
            
                <br>
                
            
                <div class="mb-3">
                    <input class="btn btn-primary" type="submit" value="Add Staff" style="margin-left: 41%;
                    width: 160px;">
                </div>
            </form>


            






