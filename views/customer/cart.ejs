	<!-- Nice Select CSS -->
    <link rel="stylesheet" href="/customer/css/niceselect.css">
	<!-- Animate CSS -->
    <link rel="stylesheet" href="/customer/css/animate.css">
	<!-- Flex Slider CSS -->
    <link rel="stylesheet" href="/customer/css/flex-slider.min.css">
	<!-- Owl Carousel -->
    <link rel="stylesheet" href="/customer/css/owl-carousel.css">
	<!-- Slicknav -->
    <link rel="stylesheet" href="/customer/css/slicknav.min.css">
	
	<!-- Eshop StyleSheet -->
	<link rel="stylesheet" href="/customer/css/reset.css">
	<link rel="stylesheet" href="/customer/css/style.css">
    <link rel="stylesheet" href="/customer/css/responsive.css">
</head>

<body>
    <%- include ('partials/navbar.ejs') %>
    <br><br><br><br>
        <div class="center-col">
            <% if(typeof(cart) !='undefined' ) { %>
                <% if(cart.length==0 ) { %>
                    <div class="center">
                        <h1>There is no item in the cart</h1>
                    </div>
                    <% } else { %>

                        <div style="position:relative;margin-top: -20em; top: 100px; width:90%;">
                            <% cart.forEach(function(cartitem) { %>
                                <div class="row border border-2 mb-2">
                                    <div class="col-md-4">
                                        <img src="/uploads/<%= cartitem.productid.image %>" alt="image"
                                            style="width: 200px; object-fit: contain;">
                                    </div>
                                    <div class="col-md-4">
                                        <h1 class="fw-bold">
                                            <%= cartitem.productid.productname %>
                                        </h1>
                                        <h3 class="fw-bold">
                                            &#8377; <%= cartitem.price %>
                                        </h3>
                                        <h6 class="text-secondary">
                                            <%= cartitem.quantity %> qty
                                        </h6>
                                    </div>
                                    <di class="col-md-4">
                                        <form action="/customer/updateqty/<%=cartitem._id %>" method="POST"
                                            class="mb-3">
                                            <label for="quantity">Quantity</label>
                                            <input class="form-control mb-2" type="number" name="quantity" id="quantity"
                                                max="<%= cartitem.productid.quantity %>" min="1"
                                                value="<%=cartitem.quantity %>">
                                            <input type="submit" value="Update Quantity" class="btn btn-primary">
                                        </form>
                                        <form action="/customer/deleteproduct/<%=cartitem._id %>" method="POST">
                                            <input type="hidden" name="hidden">
                                            <input type="submit" value="Remove from cart" class="btn btn-danger">
                                        </form>
                                    </di>
                                </div>
                                <% }) %>
                                    <dic class="row">
                                        <div class="col-md-5">
                                            <h3 class="fw-bold">Total Price:</h3>
                                            <h3 class="fw-bold"> &#8377;
                                                <% if(typeof(amount) !='undefined' ) { %>
                                                    <%= amount %> /-
                                                        <%}%>
                                            </h3>
                                            <a href="/customer/checkout" style="color: aliceblue;background-color: green;" class="btn btn-success">Proceed To Checkout</a>
                                        </div>
                        </div>
                        <% } %>
        </div>
        <% } %>
            </div>
            	<!-- Jquery -->
    <script src="/customer/js/jquery.min.js"></script>
    <script src="/customer/js/jquery-migrate-3.0.0.js"></script>
	<script src="/customer/js/jquery-ui.min.js"></script>
	<!-- Popper JS -->
	<script src="/customer/js/popper.min.js"></script>
	<!-- Bootstrap JS -->
	<script src="/customer/js/bootstrap.min.js"></script>
	<!-- Color JS -->
	<script src="/customer/js/colors.js"></script>
	<!-- Slicknav JS -->
	<script src="/customer/js/slicknav.min.js"></script>
	<!-- Owl Carousel JS -->
	<script src="/customer/js/owl-carousel.js"></script>
	<!-- Magnific Popup JS -->
	<script src="/customer/js/magnific-popup.js"></script>
	<!-- Waypoints JS -->
	<script src="/customer/js/waypoints.min.js"></script>
	<!-- Countdown JS -->
	<script src="/customer/js/finalcountdown.min.js"></script>
	<!-- Nice Select JS -->
	<script src="/customer/js/nicesellect.js"></script>
