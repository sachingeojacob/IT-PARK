    <body>
        <%- include('partials/navbar.ejs') %>


        <!-- main content starts here -->
        <!-- Shopping Cart -->
	<div class="shopping-cart section">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<!-- Shopping Summery -->
					
					<% if(typeof(cart) != 'undefined') { %>
						<% if(cart.length == 0) { %>

							<div style="display: flex; align-items: center; justify-content: center;">
								<h1>There is no product in cart</h1>
							</div>
						<% } else { %>
						<table class="table shopping-summery">
							<thead>
								<tr class="main-hading">
									<th>PRODUCT</th>
									<th>NAME</th>
									<th class="text-center">QUANTITY</th>
									<th class="text-center">TOTAL</th> 
									<th class="text-center"><i class="ti-trash remove-icon"></i></th>
								</tr>
							</thead>
							<tbody>
								<% cart.forEach(function(items) { %>
									<tr>
										<td class="image" data-title="No"><img src="/uploads/<%= items.productid.image %>" alt="#"></td>
										<td class="product-des" data-title="Description">
											<p class="product-name"><a href="#"><%= items.productid.productname %></a></p>
											<p class="product-des"><%= items.productid.description %></p>
										</td>
										<td class="qty" data-title="Qty"><!-- Input Order -->
											<div class="col-md-4">
												<form action="/customer/updateqty/<%=items._id %>" method="POST"
													class="mb-3">
													<label for="quantity">Quantity</label>
													<input class="form-control mb-2" type="number" name="quantity" id="quantity"
														max="<%= items.productid.quantity %>" min="1"
														value="<%=items.quantity %>">
													<input type="submit" value="Update Quantity" class="btn btn-primary">
												</form>
											</div>
											<!--/ End Input Order -->
										</td>
										<td class="total-amount" data-title="Total"><span><%= items.price %></span></td>
										<td class="action" data-title="Remove"><a href="/customer/deleteproduct/<%=items._id %>"><i class="ti-trash remove-icon"></i></a></td>
									</tr>
								<% }) %>
								
							</tbody>
						</table>

					<% }} %>
					<!--/ End Shopping Summery -->
				</div>
			</div>
				<% if(typeof(amount) != 'undefined' || typeof(cart) != 'undefined') { %>
					<% if(cart.length != 0) { %>
					<div class="row">
						<div class="col-12">
							<!-- Total Amount -->
							<div class="total-amount">
								<div class="row">
									<div class="col-lg-8 col-md-5 col-12">
										
									</div>
									<div class="col-lg-4 col-md-7 col-12">
										<div class="right">
											<ul>
												<li>Cart Subtotal<span><%= amount %></span></li>
												<li>Shipping<span>Free</span></li>
												
												<li class="last">You Pay<span><%= amount %></span></li>
											</ul>
											<div class="button5">
												<a href="/customer/checkout" class="btn">Checkout</a>
												<a href="/customer/dashboard" class="btn">Continue shopping</a>
											</div>
										</div>
									</div>
								</div>
							</div>
							<!--/ End Total Amount -->
						</div>
					</div>
				<%}} %>
		</div>
	</div>

