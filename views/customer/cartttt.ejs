        <!-- Fancybox -->
        <link rel="stylesheet" href="/customer/css/jquery.fancybox.min.css">
        <!-- Themify Icons -->
        <link rel="stylesheet" href="/customer/css/themify-icons.css">
        <!-- Nice Select CSS -->
        <link rel="stylesheet" href="/customer/css/niceselect.css">
        <!-- Animate CSS -->
        <link rel="stylesheet" href="/customer/css/animate.css">
        <!-- Flex Slider CSS -->
        <link rel="stylesheet" href="/customer/css/flex-slider.min.css">
        <!-- Owl Carousel -->
        <link rel="stylesheet" href="/customer/css/owl-carousel.css">
        <!-- Slicknav -->
        <link rel="stylesheet" href="/customer/css/slicknav.min.css">
        
        <!-- Eshop StyleSheet -->
        <link rel="stylesheet" href="/customer/css/reset.css">
        <link rel="stylesheet" href="/customer/css/style.css">
        <link rel="stylesheet" href="/customer/css/responsive.css">

    </head>
    <body>
        <%- include('partials/navbar.ejs') %>


        <!-- main content starts here -->

        <div class="breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="bread-inner">
                            <ul class="bread-list">
                                <li><a href="index1.html">Home<i class="ti-arrow-right"></i></a></li>
                                <li class="active"><a href="blog-single.html">Cart</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<!-- Shopping Cart -->

<div class="shopping-cart section">
    <% if(typeof(cart) !='undefined' ) { %>
        <% if(cart.length==0 ) { %>
            <div class="center">
                <h1>There is no item in the cart</h1>
            </div>
            <% } else { %>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Shopping Summery -->
                <table class="table shopping-summery">
                    <thead>
                        <tr class="main-hading">
                            <th>PRODUCT</th>
                            <th>NAME</th>
                            <th class="text-center">UNIT PRICE</th>
                            <th class="text-center">QUANTITY</th>
                            <th class="text-center">TOTAL</th> 
                            <th class="text-center"><i class="ti-trash remove-icon"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% cart.forEach(function(cartitem) { %>
                            <td class="image" data-title="No"><img src="/uploads/<%= cartitem.productid.image %>" alt="image"></td>
                            <td class="product-des" data-title="Description">
                                <p class="product-name"><a href="#"><%= cartitem.productid.productname %></a></p>
                                <p class="product-des"><%= cartitem.productid.brandname %></p>
                            </td>
                            <td class="price" data-title="Price"><span>RS. <%= cartitem.price %> </span></td>
                            <td class="qty" data-title="Qty"><!-- Input Order -->
                                <div class="input-group">
                                    <div class="button minus">
                                        <button type="button" class="btn btn-primary btn-number" disabled="disabled" data-type="minus" data-field="quant[1]">
                                            <i class="ti-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" name="quant[1]" class="input-number"  data-min="1" data-max="100" value="<%= cartitem.quantity %>">
                                    <div class="button plus">
                                        <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant[1]">
                                            <i class="ti-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <!--/ End Input Order -->
                            </td>
                            <td class="total-amount" data-title="Total"><span>$220.88</span></td>
                            <td class="action" data-title="Remove"><a href="#"><i class="ti-trash remove-icon"></i></a></td>
                        </tr>
                        
                    </tbody>
                </table>
                <!--/ End Shopping Summery -->
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <!-- Total Amount -->
                <div class="total-amount">
                    <div class="row">
                        <div class="col-lg-8 col-md-5 col-12">
                            
                        </div>
                        <div class="col-lg-4 col-md-7 col-12">
                            <div class="right">
                                <ul>
                                    <li>Cart Subtotal<span>RS.  <% if(typeof(amount) !='undefined' ) { %>
                                        <%= amount %> /-
                                            <%}%></span></li>
                                    <li>Shipping<span>Free</span></li>
                                    
                                    <li class="last">You Pay<span>RS.  <% if(typeof(amount) !='undefined' ) { %>
                                        <%= amount %> /-
                                            <%}%></span></li>
                                </ul>
                                <div class="button5">
                                    <a href="/customer/checkout" class="btn">Checkout</a>
                                    <a href="/customer/dashboard" class="btn">Continue shopping</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/ End Total Amount -->
            </div>
        </div>
       
    </div>
    <% } %>
    <% } %>
</div>
    

        <!-- main content ends here -->


        
     <!-- Jquery -->
    <script src="/customer/js/jquery.min.js"></script>
    <script src="/customer/js/jquery-migrate-3.0.0.js"></script>
	<script src="/customer/js/jquery-ui.min.js"></script>
	<!-- Popper JS -->
	<script src="/customer/js/popper.min.js"></script>
	<!-- Bootstrap JS -->
	<script src="/customer/js/bootstrap.min.js"></script>
	<!-- Color JS -->
	<script src="/customer/js/colors.js"></script>
	<!-- Slicknav JS -->
	<script src="/customer/js/slicknav.min.js"></script>
	<!-- Owl Carousel JS -->
	<script src="/customer/js/owl-carousel.js"></script>
	<!-- Magnific Popup JS -->
	<script src="/customer/js/magnific-popup.js"></script>
	<!-- Waypoints JS -->
	<script src="/customer/js/waypoints.min.js"></script>
	<!-- Countdown JS -->
	<script src="/customer/js/finalcountdown.min.js"></script>
	<!-- Nice Select JS -->
	<script src="/customer/js/nicesellect.js"></script>
	<!-- Flex Slider JS -->
	<script src="/customer/js/flex-slider.js"></script>
