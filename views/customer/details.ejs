    <div class="center">
        <% if(typeof(product) !='undefined' ) { %>
            <div class="card mb-3" style="max-width: 100%; height: 90%;">
                <div class="row g-0">
                    <div class="col-md-4 mt-5">
                        <img src="/uploads/<%=product.image%>" alt="image" style="object-fit: contain; width: 100%;">
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h1 class="card-title mt-5 fw-bold">
                                <%= product.productname %>
                            </h1>

                            <h2>
                                &#8377; <%=product.price %>
                            </h2>
                            <h5>
                                <%=product.description%>
                            </h5>
                            <br>
                            <h5>
                                Warrenty: <%=product.warrenty%>
                            </h5>
                            <br>
                            <h5>
                                Color: <%=product.color%>
                            </h5>
                            <br>
                            <% if(product.quantity==0 ) { %>
                                <h5 class="error">Out of Stock</h5>
                                <% } else { %>
                                    <form action="/customer/addtocart/<%=product._id%>" method="POST" class=" col-md-3">
                                        <label for="quantity">Quantity</label>
                                        <input type="number" name="quantity" id="quanity" class="form-control"
                                            max="<%= product.quantity %>" min="1" value="1">
                                        <br>
                                        <input type="submit" value="Add to cart" class="btn btn-primary">
                                    </form>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
    </div>

