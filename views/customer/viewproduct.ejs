    </head>

    <body>
        <%- include('partials/navbar.ejs') %>

        <!-- main contents sweatshirts -->
		<h1 align="center" style="margin-top:1em;font-weight: bold ;color: rgb(34, 80, 179);">Available Products</h1>
		<div class="dropdown">
			<button style="margin-left: 2em;" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			  Choose Category
			</button>
			<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
			  <a class="dropdown-item" href="#">Action</a>
			  <a class="dropdown-item" href="#">Another action</a>
			  <a class="dropdown-item" href="#">Something else here</a>
			</div>
		  </div>
		<div class="tab-content" id="myTabContent">

	</div><div class="tab-pane fade show active" id="man" role="tabpanel">
			<div class="tab-single">
				<div class="row p-4" style="margin-left: 15em; margin-right: 15em;">
					<!--  here -->
					<% if(typeof(products) !='undefined' ) { %>
						<% products.forEach(function(product) { %>
							<div class="col-xl-3 col-lg-4 col-md-4 col-12" >
								<div class="single-product" style="background-color:#1d82cf;">
									<div class="product-img">
										<a href="product-details.html">
											<img class="default-img" src="/uploads/<%= product.image %>" alt="#">
											<img class="hover-img" src="/uploads/<%= product.image %>" alt="#">
										</a>
										<div class="button-head">
											<div class="product-action">
												<a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
												
											</div>
											<form action="/customer/addtocart/<%=product._id%>" method="POST">
												<input type="hidden" name="quantity" id="" value="1">
												<input type="submit" style="" value="Add to cart" class="btn btn-success">
											</form>
										</div>
									</div>
									<div class="product-content" >
										<h3 "><a href="product-details.html" style="font-weight: bold;"><%= product.productname %></a></h3>
										<div class="product-price">
											<span style="font-weight: bold;">RS. <%= product.price %></span>
										</div>
									</div>
								</div>
							</div>
					<% })} %>
					<!-- here -->
					
				</div>
			</div>
		</div>
	</div>



        <!-- main contents ends -->

